<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.ui.layout.form">

		<f:SimpleForm id="SimpleFormChange354"
			editable="true"
			layout="ResponsiveGridLayout"
			title="{i18n>appTitle}"
			labelSpanXL="3"
			labelSpanL="3"
			labelSpanM="3"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false" >
			<f:content>
                    <Label id="_display_label_customerid" text="{i18n>customerid}" labelFor="_display_text_customerid"></Label>
                    <Text id="_display_Text_customerid" text="{CustomerId}"></Text>                      
                    <Label id="_display_label_firstname" text="{i18n>firstname}" labelFor="_display_Text_firstname"></Label>
                    <Text id="_display_Text_firstname" text="{Firstname}"></Text>                      
                    <Label id="_display_label_lastname" text="{i18n>lastname}" labelFor="_display_Text_lastname"></Label>
                    <Text id="_display_Text_lastname" text="{Lastname}"></Text>                      
                    <Label id="_display_label_gender" text="{i18n>gender}" labelFor="_display_select_gender"></Label>
                    <Text id="_display_text_gender" text="{path: '/gender', formatter: '.genderFormatter'}"></Text>
               

                <!--    
                    <Select id="_display_select_gender" items="{genderModel>/genders}" selectedKey="{/gender}">
                        <items>
                             <core:Item id="_display_selectitem_model" key="{genderModel>}" text="{= ${genderModel>}==='female' ?${i18n>female} : ${i18n>male}}"/>
                        </items>
                    </Select>
                 -->  
                    <!--  
                        <Select id="_display_select_gender">
                           <items>
                                 <core:Item id="_display_selectitem_male" key="male" text="male"/>
                                 <core:Item id="_display_selectitem_female" key="female" text="female"/>
                                 <core:Item id="_display_selectitem_other" key="other" text="other"/>
                             </items>
                         </Select>
                     -->
                    <Label id="_display_label_title" text="{i18n>title}" labelFor="_display_Text_title"></Label>
                    <Text id="_display_Text_title" text="{AcademicTitle}"></Text>                    
                    <Label id="_display_label_mail" text="{i18n>mail}" labelFor="_display_Text_mail"></Label>
                    <Text id="_display_Text_mail" text="{Email}"></Text>                      
                    <Label id="_display_label_phone" text="{i18n>phone}" labelFor="_display_Text_phone"></Label>
                    <Text id="_display_Text_phone" text="{Phone}"></Text>    
                    <Label id="_display_label_homepage" text="{i18n>website}" labelFor="_display_Text_homepage"></Label>
                    <Text id="_display_Text_homepage" text="{Website}"></Text>
			</f:content>
		</f:SimpleForm>       
