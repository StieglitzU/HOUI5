<mvc:View xmlns:table="sap.ui.table" controllerName="at.cloudna.zhoui505.controller.Main"
    xmlns:f="sap.ui.layout.form" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" displayBlock="true"
    xmlns="sap.m">

    <Page id="page" title="{i18n>main.title}">
            <content>
                <Table id="main_table" headerText="{i18n>main.table.title}" items="{/CustomerSet}"  alternateRowColors="true" noDataText="sorry, no data available" >
                <!--mode="Delete"  delete="onDeletePressed"-->
                <headerToolbar>
                <OverflowToolbar id="_IDGenOverflowToolbar1">
                    <Title id="_IDGenTitle1" text="{i18n>main.table.title}"/>
                    <ToolbarSpacer id="_IDGenToolbarSpacer1"/>
                    <Button id="main_button_create" icon="sap-icon://add" 
                    type="Accept" text="{i18n>create}" press="onCreatePressed"/>
                </OverflowToolbar>
</headerToolbar>
                    <columns>
                    <Column id="main_column_customerid">
                       <Text id="main_text_customerid" text="{i18n>customerid}"/>
                    </Column>
                    <Column id="main_column_firstname">
                        <Text id="main_text_firstname" text="{i18n>firstname}"/>
                    </Column>
                    <Column id="main_column_lastname">
                        <Text id="main_text_lastname" text="{i18n>lastname}"/>
                    </Column>
                    <Column id="main_column_title" minScreenWidth="Desktop">
                        <Text id="main_text_title" text="{i18n>title}"/>
                    </Column>
                    <Column id="main_column_gender" minScreenWidth="Desktop">
                        <Text id="main_text_gender" text="{i18n>gender}"/>
                    </Column>
                    <Column id="main_column_email" minScreenWidth="Desktop">
                       <Text id="main_text_email" text="{i18n>mail}"/>
                    </Column>
                    <Column id="main_column_phone" minScreenWidth="Desktop">
                        <Text id="main_text_phone" text="{i18n>phone}"/>
                    </Column>
                    <Column id="main_column_website" minScreenWidth="Desktop">
                            <Text id="main_text_website" text="{i18n>website}"/>
                    </Column>
                    <Column id="main_column_delete">
                        <Text id="main_text_delete" text="{i18n>delete}"/>
                    </Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Navigation" press="onListItemPressed">
                            <cells>
                                <ObjectIdentifier title="{CustomerId}"/>
                                <Text text="{Firstname}"/>
                                <Text text="{Lastname}"/>
                                <Text text="{AcademicTitle}"/>
                                <Text text="{path: 'Gender', formatter: '.genderFormatter'}"/>
                                <Text text="{Email}"/>
                                <Text text="{Phone}"/>
                                <Link text="{Website}" href="https://{website}" target="_blank"/>
                                <Button icon="sap-icon://delete" type="Reject" press="onDeleteButtonPressed"/>
                            </cells>
                        </ColumnListItem>                        
                    </items>
                </Table>
            </content>
    </Page>

   </mvc:View>
