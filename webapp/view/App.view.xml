			adjustLabelSpan="false"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false" >
			<f:content>
                    <Label id="_app_label_customerid" text="{i18n>customerid}" labelFor="_app_text_customerid"></Label>
                    <Input id="_app_input_customerid" value="Customer12345"></Input>                      
                    <Label id="_app_label_firstname" text="{i18n>firstname}" labelFor="_app_input_firstname"></Label>
                    <Input id="_app_input_firstname" value="Uwe"></Input>                      
                    <Label id="_app_label_lastname" text="{i18n>lastname}" labelFor="_app_input_lastname"></Label>
