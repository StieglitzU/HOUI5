                             </items>
                         </Select>
                    -->
                    <Label id="_app_label_title" text="{i18n>title}" labelFor="_app_input_title"></Label>
                    <Input id="_app_input_title" value="Dr."></Input>                    <Label id="_app_label_mail" text="{i18n>mail}" labelFor="_app_input_mail"></Label>
                    <Input id="_app_input_mail" value="uwe.stieglitz@gmail.com"></Input>                      
                    <Label id="_app_label_phone" text="{i18n>phone}" labelFor="_app_input_phone"></Label>
                    <Input id="_app_input_phone" value="+4915158922125"></Input>    
                    <Label id="_app_label_homepage" text="{i18n>homepage}" labelFor="_app_input_homepage"></Label>
                    <Input id="_app_input_homepage" value="www.uwestieglitz.de"></Input>
			</f:content>
